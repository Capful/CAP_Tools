<UserControl x:Class="CAP_Tools.Pages.List.NcProgram.NCMerge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel MinWidth="200">
        <TextBlock x:Name="abc" Text="多程序串联" Style="{StaticResource Heading2}" Width="99" HorizontalAlignment="Left" />
        <Label Content="请把要串联的程序放在一个文件夹" Height="17" Width="274" Margin="0,2,0,3" HorizontalAlignment="Left" />
        <TextBlock Width="300" FontSize="10" HorizontalAlignment="Left" Margin="0">
            <Run Text="文件路径:" />
            <Run x:Name="NXRoute" Text="请点击'浏览'按钮选择需要串联的NC程序文件夹"  />
        </TextBlock>
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Height="131" Margin="0,0,0,0" Width="228" >
            <ListBox x:Name="list" HorizontalAlignment="Left" Width="142" Margin="0,10,0,0" />
            <Button x:Name="LL" Content="浏览" Click="LL_Click"  Margin="10,10,0,96" Width="60" Height="25" FontSize="10.5" />
            <Button x:Name="CL" Content="串联" Margin="-60,47,0,59" Click="CL_Click" Width="60" Height="25" FontSize="10.5" IsEnabled="False" />
        </StackPanel>
        <Label Content="请把要串联的程序放在一个文件夹" Height="17" Width="274" Margin="0,0,0,3" HorizontalAlignment="Left" />
        <Label Content="并将文件夹名字改为您需要的名字" Height="17" Width="274" Margin="0,0,0,3" HorizontalAlignment="Left" />
    </StackPanel>
</UserControl>
