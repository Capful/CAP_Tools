<UserControl x:Class="CAP_Tools.Pages.List.NcProgram.NCWcs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel MinWidth="200">
        <TextBlock x:Name="abc" Text="批量坐标替换" Style="{StaticResource Heading2}" Width="99" HorizontalAlignment="Left" />
        <Label Content="选择需要替换坐标的程序文件夹" Height="20" Width="228" Margin="0,2,0,3" HorizontalAlignment="Left" />
        <TextBlock Width="300" FontSize="10" HorizontalAlignment="Left" Margin="0">
            <Run Text="文件路径:" />
            <Run x:Name="NXRoute" Text="请点击'浏览'按钮选择NC程序文件夹"  />
        </TextBlock>
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Height="26" Margin="0,5,0,0" Width="167" >
            <TextBlock Text="将" Height="20" Margin="0,2,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"  />
            <TextBlock x:Name="WCS" Text="G54" Height="20" Margin="0,2,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="36"  />
            <TextBlock Text="替换为" Height="20" Margin="0,2,5,5" HorizontalAlignment="Center" VerticalAlignment="Top"  />
            <TextBox x:Name="AWCS" Text="G55" Margin="0,0,30,0" Width="50" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Height="131" Margin="0,0,0,0" Width="228" >
            <ListBox x:Name="list" HorizontalAlignment="Left" Width="142" Margin="0,10,0,0" />
            <Button x:Name="LL" Content="浏览" Click="Xz_Click"  Margin="10,10,0,96" Width="60" Height="25" FontSize="10.5" />
            <Button x:Name="Th" Content="替换" Margin="-60,47,0,59" Click="Th_Click" Width="60" Height="25" FontSize="10.5" IsEnabled="False" />
            <Button Content="A" Click="Button_Click" Margin="-60,77,0,28" Width="60"/>
            <Button Content="B" Click="Button_Click_1" Margin="-60,108,0,0" Width="60"/>
        </StackPanel>
    </StackPanel>
</UserControl>
