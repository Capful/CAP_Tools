<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:local="clr-namespace:NX_Tool.Pages" x:Class="NX_Tool.Pages.InstallNX"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel HorizontalAlignment="Left">
        <TextBlock Text="NX快捷安装"  Margin="0,0,0,8" FontWeight="Bold" FontSize="14" />
        <Button x:Name="LL" Content="浏览" Width="61" Height="25"   Margin="80,10,0,5" Click="Button_Click" FontSize="10.5" />
        <Label Content="选择NX安装包解压路径" Height="20" Width="140" Margin="0,-35,0,0" HorizontalAlignment="Left" />
        <TextBlock Width="300" FontSize="10">
            <Run Text="已选择路径:" />
            <Run x:Name="NXRoute" Text="请点击'浏览'按钮选择安装包文件夹"  />
        </TextBlock>
        <Button Name="Install" Content="安装主程序" Width="89" Margin="0,25,0,0" HorizontalAlignment="Left" Click="Button_Click_1" IsEnabled="False" FontSize="10.5" />
    </StackPanel>
</UserControl>
